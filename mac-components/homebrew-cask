export HOMEBREW_CASK_OPTS=--appdir=/Applications

fancy_echo "Tapping into homebrew-cask"
  brew tap phinze/homebrew-cask
  brew tap caskroom/homebrew-versions
  brewin brew-cask
  brew update

fancy_echo "Installing Dropbox"
  installcask dropbox

